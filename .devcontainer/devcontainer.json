// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node 
{
	"name": "TalkForm",
	"dockerFile": "../Dockerfile",

	// https://community.doppler.com/t/vscode-container-support/104
	// https://community.doppler.com/t/doppler-and-github-codespaces/989/2
	"containerEnv": {
		"DOPPLER_TOKEN": "${localEnv:DOPPLER_CLI_TOKEN}"
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		3000,
		65455
	],
		
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/BitBuilder-ai/devcontainer/cli:0.1.13": {}
	},
		
	"portsAttributes": {
		"3000": {
			"label": "website"
		},
		"65455": {
			"label": "BitBuilder",
			"onAutoForward": "silent",
			"requireLocalPort": true
		}
	},

	"remoteEnv": {
		// Present because this repository is for internal testing.
		"BITBUILDER_API_URL": "https://bitbuilder-beta.up.railway.app"
	},
	
	"postCreateCommand": {
		// TODO can't get the yarn install within Dockerfile to show up in dev container.
		// This also seems to be what the Microsoft example devcontainers do.
		"install packages": "yarn install --frozen-lockfile"
	},
	"postStartCommand": {
		"start code generation": "bb listener start ."
	},
	"waitFor": "postCreateCommand",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens",
				"esbenp.prettier-vscode",
				"GitHub.copilot",
				"k--kato.intellij-idea-keybindings",
				"Orta.vscode-jest",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}
