{
	"name": "TalkForm",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:0-18-bullseye",
	"remoteUser": "root",
	"containerUser": "root",
	
	"containerEnv": {
		"DOPPLER_TOKEN": "${localEnv:DOPPLER_CLI_TOKEN}"
	},

		
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/ellipsis-dev/devcontainer/cli:0.2.7": {},
		"ghcr.io/metcalfc/devcontainer-features/doppler:0.1.1": {}
	},

	"forwardPorts": [
		3000,
		65455 // Required for Ellipsis
	],		
	"portsAttributes": {
		"3000": {
			"label": "website"
		},
		"65455": { // This opens a port, allowing the CLI to contact the Ellipsis API
			"label": "Ellipsis",
			"onAutoForward": "silent",
			"requireLocalPort": true
		}
	},
	"postCreateCommand": "yarn install --frozen-lockfile",

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens",
				"esbenp.prettier-vscode",
				"GitHub.copilot",
				"k--kato.intellij-idea-keybindings",
				"Orta.vscode-jest",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}
